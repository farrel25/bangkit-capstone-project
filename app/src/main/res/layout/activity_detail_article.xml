<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailBatikActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/text_24sp_bold_white"
            app:contentScrim="@color/transparent"
            app:expandedTitleMarginStart="16dp"
            app:expandedTitleTextAppearance="@style/text_32sp_bold_white"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="@string/title">

            <ImageView
                android:id="@+id/ivArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_dummy"
                app:layout_collapseMode="parallax" />

            <include layout="@layout/custom_action_bar_back" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/black"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:contentDescription="@string/button"
        android:focusable="true"
        android:src="@drawable/ic_favorite"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="end|bottom"
        app:tint="@android:color/white" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvArticleOverview"
                style="@style/text_16sp_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/article_overview"
                app:layout_constraintStart_toStartOf="@+id/ivAdmin"
                app:layout_constraintTop_toBottomOf="@+id/ivAdmin" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvVMArticle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingTop="0dp"
                android:paddingEnd="0dp"
                android:paddingBottom="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtViewMoreArticle"
                app:layout_constraintTop_toBottomOf="@+id/txtViewMoreArticle" />

            <ImageView
                android:id="@+id/ivAdmin"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                android:src="@drawable/img_dummy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAdminArticle"
                style="@style/text_16sp_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/article_contributor"
                app:layout_constraintStart_toEndOf="@+id/ivAdmin"
                app:layout_constraintTop_toTopOf="@+id/ivAdmin" />

            <TextView
                android:id="@+id/tvDateArticle"
                style="@style/text_10sp_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/article_date"
                app:layout_constraintStart_toStartOf="@+id/tvAdminArticle"
                app:layout_constraintTop_toBottomOf="@+id/tvAdminArticle" />

            <TextView
                android:id="@+id/txtViewMoreArticle"
                style="@style/text_18sp_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/view_more"
                app:layout_constraintStart_toStartOf="@+id/tvArticleOverview"
                app:layout_constraintTop_toBottomOf="@+id/tvArticleOverview" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>